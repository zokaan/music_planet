<%= form_for @playlist do |form| %>
  <%= form.label :playlist_name %>
  <%= form.text_field :playlist_name, class: 'form-control' %>
  <br>
  <% form.label :current_user %>
    <% form.hidden_field :user_id, :value => current_user %>
  <br>

  <%= form.submit params[:action] == 'new' ? 'Save' : 'Update', class: 'btn btn-block btn-default' %>
<% end %>
